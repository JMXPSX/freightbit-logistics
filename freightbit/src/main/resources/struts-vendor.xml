<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="vendor" namespace="/" extends="struts-default">

        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types>

        <default-action-ref name="Vendor" />

        <!--vendor-->
        <action name="loadSearchVendorPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadSearchVendorPage">
            <result name="success" type="tiles">vendor.vendorSearch.tiles</result>
        </action>

        <action name="loadAddVendorPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadAddVendorPage">
            <result name="success" type="tiles">vendor.vendorAdd.tiles</result>
        </action>

        <action name="loadEditVendorPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadEditVendorPage">
            <result name="TRUCKING" type="tiles">vendor.vendorEditVendorTrucking.tiles</result>
            <result name="SHIPPING" type="tiles">vendor.vendorEditVendorShipping.tiles</result>
        </action>

        <action name="loadEditVendorTrucksPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadEditVendorTrucksPage">
            <result name="success" type="tiles">vendor.vendorEditTrucks.tiles</result>
        </action>

        <action name="loadSaveCompletePage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadSaveCompletePage">
            <result name="success" type="tiles">vendor.vendorSaveComplete.tiles</result>
        </action>

        <action name="addVendor" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="addVendor">
            <result name="success" type="redirect">loadAddTrucksPage</result>
            <result name="input" type="tiles">vendor.vendorAdd.tiles</result>
        </action>

        <action name="viewVendors" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="viewVendors">
            <result name="success" type="tiles">vendor.vendorListView.tiles</result>
        </action>

        <action name="deleteVendor" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="deleteVendor">
            <result name="success" type="redirect">viewVendors</result>
        </action>

        <action name="editVendor" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="editVendor">
            <result name="success" type="redirect">loadSaveCompletePage</result>
        </action>

        <!--<action name="editVendor" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="editVendor">-->
        <!--<result name="success" type="redirect">viewVendors</result>-->
        <!--</action>-->

        <!--trucks-->
        <action name="loadAddTrucksPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadAddTrucksPage">
        <result name="success" type="tiles">vendor.vendorAddTrucks.tiles</result>
    </action>

        <action name="loadEditTrucksPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadEditTrucksPage">
            <result name="success" type="tiles">vendor.vendorAddTrucks.tiles</result>
        </action>

        <action name="addTrucks" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="addTrucks">
            <result name="success" type="redirect">loadAddTrucksPage</result>
            <result name="input" type="tiles">vendor.vendorAddTrucks.tiles</result>
        </action>

        <action name="deleteTrucks" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="deleteTrucks">
            <result name="success" type="redirect">loadAddTrucksPage</result>
        </action>

        <action name="editTrucks" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="editTrucks">
            <result name="success" type="redirect">loadAddTrucksPage</result>
            <result name="input" type="tiles">vendor.vendorAddTrucks.tiles</result>
        </action>


        <!-- vessels -->

        <action name="loadAddVesselsPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadAddVesselsPage">
            <result name="success" type="tiles">vendor.vendorAddVessels.tiles</result>
        </action>

        <action name="loadEditVesselsPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadEditVesselsPage">
            <result name="success" type="tiles">vendor.vendorAddVessels.tiles</result>
        </action>

        <action name="addVessel" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="addVessel">
            <result name="success" type="redirect">loadAddVesselsPage</result>
            <result name="input" type="tiles">vendor.vendorAddVessels.tiles</result>
        </action>

        <action name="deleteVessel" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="deleteVessel">
            <result name="success" type="redirect">loadAddVesselsPage</result>
        </action>

        <action name="updateVessel" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="updateVessel">
            <result name="success" type="redirect">loadAddVesselsPage</result>
        </action>


        <!--driver-->
        <action name="loadAddDriverPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadAddDriverPage">
            <result name="success" type="tiles">vendor.vendorAddDriver.tiles</result>
        </action>

        <action name="loadEditDriverPage" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="loadEditDriverPage">
            <result name="success" type="tiles">vendor.vendorAddDriver.tiles</result>
        </action>

        <action name="addDriver" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="addDriver">
            <result name="success" type="redirect">loadAddDriverPage</result>
            <result name="input" type="tiles">vendor.vendorAddDriver.tiles</result>
        </action>

        <action name="editDriver" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="editDriver">
            <result name="success" type="redirect">loadAddDriverPage</result>
            <result name="input" type="tiles">vendor.vendorAddDriver.tiles</result>
        </action>

        <action name="deleteDriver" class="com.sr.apps.freightbit.vendor.action.VendorAction" method="deleteDriver">
            <result name="success" type="redirect">loadAddDriverPage</result>
        </action>

    </package>
</struts>
